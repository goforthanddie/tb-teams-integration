{
  "manifest_version": 2,
  "name": "TB Teams Integration",
  "version": "0.1.0",
  "description": "Add a Create Teams Meeting button to Thunderbird calendar events.",
  "applications": {
    "gecko": {
      "id": "tb-teams-integration@example.com",
      "strict_min_version": "147.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "identity",
    "storage"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "experiment_apis": {
    "teamsDialog": {
      "schema": "experiments/teamsDialog/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["teamsDialog"]],
        "script": "experiments/teamsDialog/parent.js"
      }
    }
  },
  "icons": {
    "48": "icons/teams.svg"
  },
  "web_accessible_resources": [
    "icons/teams.svg"
  ]
}
